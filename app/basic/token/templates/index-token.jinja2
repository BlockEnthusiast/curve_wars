                <table class="table table-hover">
                  <tr scope="col">
                    <th>id</th>
                    <th>name</th>
                    <th>symbol</th>
                    <th>address</th>
                    <th>transfers</th>
                  </tr>
                  {% for token in tokens %}

                  <tr scope="row">
                    <th scope="col">{{ token.id }}</th>
                    <td>{{ token.contract.address.name }}</td>
                    <td>{{ token.contract.address.symbol }}</td>
                    <td>{{ token.contract.address.address }}</td>
                    <td>{{ token.transfers|length }}</td>
                  </tr>
                  {% endfor %}

                </table>
          {% else %}
            <h2> Don't have any tokens added... </h2>
          {% endif %}
